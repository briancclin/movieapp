<% provide(:title, @movie.name) %>
<div class ="container">
	<div class ="row">
		<div class="movie-info-top">
			<%= image_tag("#{@configuration.base_url}w154#{@movie.poster_path}", size: "154x231") if @movie.poster_path %>
			<div class="ratings">
        		<% imdb_path = "http://www.imdb.com/title/tt" + @movie.imdb_id.to_s %>
          		<%= link_to imdb_path do %>
          			<%= image_tag("/assets/imdb.png", size: "44x21") %>
          		<% end %>
          		<h5 class="imdb-rating"><%= @imdb_rating %></h5>
          			<%= link_to @movie.rotten_link do %>
          				<% if @rotten_rating > 0 %>
          					<% img_src = "/assets/" + get_rotten_image(@rotten_rating, @movie.certified_fresh) %>
          					<%= image_tag(img_src, size: "26x28") %>
          				<% end %>
          			<% end %>
          		<h5 class="rotten-rating"><%= get_rotten_text(@rotten_rating) %></h5>
        	</div>
		</div>
		<div class = "movie-info-top" id = "info-right">
			<h2><%= @movie.name %> (<%= @movie.year %>)</h2>
			<h6><%= @moviedb.runtime %> minutes | <%= @moviedb.release_date %></h6>
			<h4>Directed by: <%= @director %></h4>
			<h3>Overview</h3>
			<p><%= @moviedb.overview %></p>
		</div>
	</div>
</div>
<br>
<div class="trailer">
	<h3>Trailer</h3>
 <% @trailers['youtube'].each do |trailer| %>
 		<% if trailer['type'] == "Trailer" %>
    		<%= raw(youtube_embed("http://www.youtube.com/watch?v=#{trailer['source']}")) %><br />
    	<% end %>
    	<% end %>
</div>
<script>
/* lazy load images */
    $("img.lazy").lazyload({
    	effect : "fadeIn"
	});
</script>